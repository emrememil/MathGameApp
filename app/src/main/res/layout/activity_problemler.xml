<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BC59A1"
    android:orientation="vertical"
    tools:context=".Problemler.Problemler">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Puan:"
        android:textColor="#FFEB3B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrap_status" />

    <TextView
        android:id="@+id/tv_puan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView8"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/textView8"
        android:fontFamily="sans-serif-smallcaps"
        android:text="0"
        android:textColor="#FFEB3B"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/textView9" />

    <LinearLayout
        android:id="@+id/oruntu1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="-1dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/oruntu2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/oruntu1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="4dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/oruntu3"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/oruntu2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="4dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/oruntu4"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/oruntu3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal"></LinearLayout>

    <EditText
        android:id="@+id/et_cevap"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oruntu4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:ems="10"
        android:fontFamily="@font/carter_one"
        android:hint="Cevap Giriniz"
        android:inputType="number"
        android:textAlignment="center"

        android:textColor="#FF9800"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>